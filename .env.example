# Deployment Configuration
# Copy this file to .env and fill in your actual values

# Server connection details
SERVER_IP=your.server.ip.here
SERVER_USER=your_ssh_user

# Remote deployment path
REMOTE_PATH=/path/to/Server/mods/

# Build artifact name
JAR_NAME=tinkers-bench-1.0.4.jar

# Path to HytaleServer.jar (relative to project root)
HYTALE_JAR_PATH=../HytaleServer.jar

# Local deployment path (optional, for local testing)
LOCAL_PATH=/Users/youruser/Library/Application Support/Hytale/UserData/Saves/WorldName/mods
